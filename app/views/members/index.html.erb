<div>
    <h2>Members</h2>
    <table class="table table-condensed table-striped table-bordered">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Major</th>
            <th>Grad Year</th>
            <th>Member since</th>
            <th>Hometown</th>
            <th>Position</th>
            <th>Division</th>
            <td></td>
        </tr>
        <% @members.each do |member| %>
        <tr>
            <td><%= member.id %></td>
            <td><%= member.name %></td>
            <td><%= member.email %></td>
            <td><%= member.password %></td>
            <td><%= member.major %></td>
            <td><%= member.grad_year %></td>
            <td><%= member.member_since %></td>
            <td><%= member.hometown %></td>
            <td><%= member.position_id %></td>
            <td><%=member.division_id %></td>
            <td>
                <%= link_to("Show", member_path(member.id), :class => "btn btn-primary btn-xs") %>
                <%= link_to("Edit", edit_member_path(member.id), :class => "btn btn-primary btn-xs") %>
                <%= link_to("Delete", delete_member_path(member.id), :class => "btn btn-danger btn-xs") %>
            </td>
        </tr>
        <% end %>
    </table>
    <%= link_to("Add new member", new_member_path, :class => "btn btn-success btn-sm") %>
    <%= link_to("Back to menu", access_menu_path, :class => "btn btn-sm btn-warning")%>
</div>