
<div>
    <h2>Create Member</h2>
    <%= form_for @member, html: {multipart: true } do |f| %>
        <%= error_messages_for(f.object) %>
        <table class="tableCenter">
            <tr>
                <td class="columnLabel">Name</td>
                <td><%= f.text_field(:name, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Email</td>
                <td><%= f.text_field(:email, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Password</td>
                <td><%= f.text_field(:password, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Major</td>
                <td><%= f.text_field(:major, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Graduation Year</td>
                <td><%= f.text_field(:grad_year, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Member Since</td>
                <td><%= f.text_field(:member_since, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Hometown</td>
                <td><%= f.text_field(:hometown, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Professional Interests</td>
                <td><%= f.text_area(:pro_interests, cols: 43, rows: 10) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Position</td>
                <td><%= collection_select(:member, :position_id, Position.order(:name), :id, :name, {}, {:multiple => false}) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Division</td>
                <td><%= collection_select(:member, :division_id, Division.order(:name), :id, :name, {}, {:multiple => false}) %></td>
            </tr>
             <tr>
                <td class="columnLabel">Member Image</td>
                <td><%= f.file_field :image %></td>
            </tr>
        </table>
        
        <div class="divCenter">
            <%= f.submit("Create Member", :class => "btn btn-success btn-sm") %>
            <%= link_to("Back to List", members_path, :class => "btn btn-warning btn-sm") %>
        </div>
    <% end %>
</div>
