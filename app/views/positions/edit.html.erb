
<div>
    <h2>Update Position</h2>
    <%= form_for @position, html: {multipart: true } do |f| %>
        <%= error_messages_for(f.object) %>
        <table class="tableCenter">
            <tr>
                <td class="columnLabel">Name</td>
                <td><%= f.text_field(:name, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Type</td>
                <td><%= f.text_field(:pos_type, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Picture</td>
                <td><%= f.file_field :image %></td>
            </tr>
        </table>
        
        <div class="divCenter">
            <%= f.submit("Update Type", :class => "btn btn-success btn-sm") %>
            <%= link_to("Back to List", positions_path, :class => "btn btn-warning btn-sm") %>
        </div>
    <% end %>
</div>
