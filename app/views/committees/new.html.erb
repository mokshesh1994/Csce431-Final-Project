
<div>
    <h2>Create Committee</h2>
    <%= form_for(@committee) do |f| %>
        <%= error_messages_for(f.object) %>
        <table class="tableCenter">
            <tr>
                <td class="columnLabel">Name</td>
                <td><%= f.text_field(:name, size: 40) %></td>
            </tr>
            <tr>
                <td class="columnLabel">Description</td>
                <td><%= f.text_area(:description, cols: 43, rows: 10) %></td>
            </tr>
        </table>
        
        <div class="divCenter">
            <%= f.submit("Create Committee", :class => "btn btn-success btn-sm") %>
            <%= link_to("Back to List", committees_path, :class => "btn btn-warning btn-sm") %>
        </div>
    <% end %>
</div>
